# Web-Based Bank Statement Converter API - Production Configuration

# Application Settings
FLASK_ENV=production
FLASK_DEBUG=False
SECRET_KEY=your-super-secret-key-change-this-in-production

# File Handling
MAX_FILE_SIZE_MB=50
UPLOAD_RETENTION_HOURS=1
CLEANUP_INTERVAL_MINUTES=30

# Server Configuration
HOST=127.0.0.1
PORT=5000
WORKERS=4

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/bank-converter/app.log
LOG_TO_STDOUT=true

# Security
API_KEY_REQUIRED=false
RATE_LIMIT_ENABLED=true
CORS_ORIGINS=*

# Database (optional - for job persistence)
# DATABASE_URL=postgresql://bank_converter:password@localhost/bank_converter
# DATABASE_POOL_SIZE=10
# DATABASE_POOL_TIMEOUT=30

# Redis (optional - for caching and session storage)
# REDIS_URL=redis://localhost:6379/0
# REDIS_TIMEOUT=10

# Monitoring
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=false

# File Storage
UPLOAD_FOLDER=uploads
CONVERTED_FOLDER=converted
TEMP_FOLDER=/tmp/bank_converter

# Performance
WORKER_TIMEOUT=300
MAX_REQUESTS_PER_WORKER=1000
PRELOAD_APP=true

# SSL/TLS (if handling SSL at application level)
SSL_CERT_PATH=/etc/ssl/certs/yourdomain.crt
SSL_KEY_PATH=/etc/ssl/private/yourdomain.key